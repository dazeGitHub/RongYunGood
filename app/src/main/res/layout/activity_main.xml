<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id = "@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id = "@+id/btn_login_rongyun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录到融云"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        />

    <Button
        android:id = "@+id/btn_register_cust_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册自定义的页面"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login_rongyun"
        />

    <Button
        android:id = "@+id/btn_jump_conversation_list_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到自定义的会话列表页"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_register_cust_page"
        />

    <Button
        android:id = "@+id/btn_jump_conversation_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到自定义的会话页"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_jump_conversation_list_page"
        />

    <Button
        android:id = "@+id/btn_refresh_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取并刷新文本框的用户信息显示"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_jump_conversation_page"
        />

    <Button
        android:id = "@+id/btn_sync_myrongyun_userinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同步自己的融云用户信息"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_refresh_show"
        />

    <Button
        android:id = "@+id/btn_sync_target_rongyun_userinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同步对方融云用户信息"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sync_myrongyun_userinfo"
        />

    <Button
        android:id = "@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出登录"
        app:layout_constraintTop_toBottomOf="@id/btn_sync_target_rongyun_userinfo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>